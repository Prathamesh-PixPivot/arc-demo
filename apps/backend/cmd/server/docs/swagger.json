{
  "openapi": "3.0.0",
  "info": {
    "title": "Arc API",
    "description": "API for Arc Consent Manager and Privacy Platform",
    "version": "1.0.0",
    "contact": {
      "name": "Arc Support",
      "email": "support@pixpivot.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local Development Server"
    },
    {
      "url": "https://api.arc.pixpivot.com",
      "description": "Production Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        }
      },
      "DataPrincipal": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "email": { "type": "string", "format": "email" },
          "name": { "type": "string" }
        }
      },
      "Consent": {
        "type": "object",
        "properties": {
          "purpose_id": { "type": "string", "format": "uuid" },
          "status": { "type": "string", "enum": ["granted", "denied", "revoked"] },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      },
      "DSRRequest": {
        "type": "object",
        "properties": {
          "request_type": { "type": "string", "enum": ["access", "delete", "rectify", "portability"] },
          "details": { "type": "string" }
        },
        "required": ["request_type"]
      }
    }
  },
  "paths": {
    "/api/v1/public/users": {
      "post": {
        "summary": "Create Data Principal",
        "description": "Register a new data principal (user) in the system.",
        "tags": ["Public API"],
        "security": [{ "ApiKeyAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "name": { "type": "string" },
                  "external_id": { "type": "string" }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/DataPrincipal" }
              }
            }
          },
          "400": { "description": "Invalid input" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/v1/public/users/{userId}/consents": {
      "get": {
        "summary": "Get User Consents",
        "description": "Retrieve active consents for a specific user.",
        "tags": ["Public API"],
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "List of consents",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Consent" }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "User not found" }
        }
      }
    },
    "/api/v1/public/consents/submit": {
      "post": {
        "summary": "Submit Consent",
        "description": "Submit a consent decision for a user.",
        "tags": ["Public API"],
        "security": [{ "ApiKeyAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "string", "format": "uuid" },
                  "purpose_id": { "type": "string", "format": "uuid" },
                  "status": { "type": "string", "enum": ["granted", "denied"] }
                },
                "required": ["user_id", "purpose_id", "status"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Consent submitted successfully" },
          "400": { "description": "Invalid input" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/v1/public/dsr": {
      "post": {
        "summary": "Create DSR Request",
        "description": "Submit a Data Subject Rights request.",
        "tags": ["Public API"],
        "security": [{ "ApiKeyAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/DSRRequest" }
            }
          }
        },
        "responses": {
          "201": { "description": "DSR request created" },
          "400": { "description": "Invalid input" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/v1/public/sdk/{tenantId}/{formId}": {
      "get": {
        "summary": "Get SDK Configuration",
        "description": "Retrieve the configuration for the Consent Manager SDK.",
        "tags": ["SDK"],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          },
          {
            "name": "formId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "SDK Configuration",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "/api/v1/public/cookies/{tenantId}": {
      "get": {
        "summary": "Get Allowed Cookies",
        "description": "Retrieve the list of allowed cookies for a tenant.",
        "tags": ["SDK"],
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "List of cookies",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "type": "object" } }
              }
            }
          }
        }
      }
    },
    "/api/v1/public/receipts/verify/{receiptNumber}": {
      "get": {
        "summary": "Verify Receipt",
        "description": "Verify the authenticity of a consent receipt.",
        "tags": ["Public API"],
        "parameters": [
          {
            "name": "receiptNumber",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Receipt details",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          },
          "404": { "description": "Receipt not found" }
        }
      }
    }
  }
}